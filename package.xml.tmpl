  <api>beta</api>
 </stability>
 <license uri="http://www.symfony-project.com/license">MIT license</license>
 <notes>-</notes>
 <contents>
  <dir name="/">

    ##CLASS_FILES##

   <file role="script" baseinstalldir="/" name="data/bin/symfony.sh">
    <tasks:replace type="pear-config" from="@PHP-BIN@" to="php_bin"/>
    <tasks:replace type="pear-config" from="@BIN-DIR@" to="bin_dir"/>
    <tasks:replace type="pear-config" from="@PEAR-DIR@" to="php_dir"/>
    <tasks:replace type="pear-config" from="@DATA-DIR@" to="data_dir" />
   </file>
   <file role="script" baseinstalldir="/" name="data/bin/symfony.bat">
    <tasks:replace type="pear-config" from="@PHP-BIN@" to="php_bin"/>
    <tasks:replace type="pear-config" from="@BIN-DIR@" to="bin_dir"/>
    <tasks:replace type="pear-config" from="@PEAR-DIR@" to="php_dir"/>
    <tasks:replace type="pear-config" from="@DATA-DIR@" to="data_dir" />
   </file>

   <file role="php" baseinstalldir="/" install-as="data/bin/symfony.php" name="data/bin/symfony.php">
    <tasks:replace type="pear-config" from="@DATA-DIR@" to="data_dir" />
    <tasks:replace type="pear-config" from="@PEAR-DIR@" to="php_dir" />
    <tasks:replace type="package-info" from="@SYMFONY-VERSION@" to="version" />
    <tasks:replace type="pear-config" from="@DATA-DIR@" to="data_dir" />
   </file>

   <file role="php" baseinstalldir="symfony" install-as="pear.php" name="lib/pear.php">
    <tasks:replace type="pear-config" from="@DATA-DIR@" to="data_dir" />
    <tasks:replace type="pear-config" from="@PEAR-DIR@" to="php_dir" />
    <tasks:replace type="package-info" from="@SYMFONY-VERSION@" to="version" />
   </file>

   <file role="doc" baseinstalldir="symfony" name="LICENSE" />
  </dir>
 </contents>
 <dependencies>
  <required>
   <php>
    <min>5.0.0</min>
   </php>
   <pearinstaller>
    <min>1.4.1</min>
   </pearinstaller>
  </required>
 </dependencies>

 <phprelease>
   <installconditions>
    <os>
     <name>windows</name>
    </os>
   </installconditions>
   <filelist>
    <install as="symfony.bat" name="data/bin/symfony.bat" />
    <ignore name="data/bin/symfony.sh" />
   </filelist>
  </phprelease>

  <phprelease>
   <filelist>
    <install as="symfony" name="data/bin/symfony.sh" />
    <ignore name="data/bin/symfony.bat" />
   </filelist>
  </phprelease>

